[user]
    name = Shreyam Pokharel

[commit]
    gpgsign = false

[init]
    defaultBranch = main

[alias]
    co = checkout
    cm = commit
    st = status
    sf = status -s
    d  = diff
    ds = diff --staged
    l = log --oneline
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit

[branch]
    sort = -committerdate

[pull]
    rebase = false

[push]
    autoSetupRemote = true

[grep]
    lineNumber = true

[rerere]
    enabled = true

[includeIf "gitdir:~/"]
    path = ~/.gitconfig-personal

[includeIf "gitdir:~/Work/"]
    path = ~/.gitconfig-work
