[color]

bg = #1F1F1F
fg = #FFFFFF
fg-alt = #A9ABB0

;===============================

[bar/main-bar]
width = 99%
height = 22.5
offset-x = 0.5%
offset-y = 0.25%
bottom = false
fixed-center = false
line-size = 2
;No compositor used
;radius = 10.0

modules-right = battery date logout
modules-left = workspaces files browser

cursor-click = pointer

enable-ipc = true

background = ${color.bg}
foreground = ${color.fg}

border-size = 3
border-color = ${color.bg}
 
padding-left = 2
padding-right = 2

module-margin-left = 3
module-margin-right = 3

font-0 = "Fantasque Sans Mono:pixelsize=12;2"
font-1 = "Material Icons:size=13;4"

scroll-up = #workspaces.next
scroll-down = #workspaces.prev

;================================

[module/date]
type = internal/date
interval = 30
label =  %time%
label-foreground = ${color.fg-alt}
time =  %H:%M
time-alt =  %Y-%m-%d

;================================

[module/logout]
type = custom/text
content = Logout
content-padding = 1
content-foreground = ${color.fg-alt}
click-left = bspc quit

;==================================

[module/workspaces]
type = internal/bspwm
pin-workspaces = true
inline-mode = false
enable-click = true
enable-scroll = false
reverse-scroll = false

ws-icon-0 = I;♚
ws-icon-1 = II;♛
ws-icon-2 = III;♜
ws-icon-3 = IV;♝
ws-icon-4 = V;♞
ws-icon-default = ♟

format = <label-state> <label-mode>

label-monitor = %name%

label-dimmed-foreground = #555
label-dimmed-underline = ${bar/top.background}
label-dimmed-focused-background = #f00

label-focused = %icon%
label-focused-foreground = #2370cf
label-focused-background = #3f3f3f
label-focused-underline = #cab5f5

label-occupied = %icon%
label-occupied-underline = #4d4dff 

label-urgent = %icon%
label-urgent-foreground = #000000
label-urgent-background = #bd2c40
label-urgent-underline = #4d4dff

label-empty = %icon%
label-empty-foreground = #55

label-separator = ➤
label-separator-padding = 2
label-separator-foreground = #4d4dff 

;==================================

[module/battery]
type = internal/battery
full-at = 99
battery = BAT0
adapter = ADP1
poll-interval = 5

time-format = %H:%M
format-charging = <animation-charging> <label-charging>
format-discharging = <ramp-capacity> <label-discharging>
label-charging = Charging %percentage%%
label-discharging = Discharging %percentage%%

label-full = Fully charged

; Only applies if <ramp-capacity> is used
ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

; Only applies if <bar-capacity> is used
bar-capacity-width = 10

; Only applies if <animation-charging> is used
animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
; Framerate in milliseconds
animation-charging-framerate = 750

; Only applies if <animation-discharging> is used
animation-discharging-0 = 
animation-discharging-1 = 
animation-discharging-2 = 
animation-discharging-3 = 
animation-discharging-4 = 
; Framerate in milliseconds
animation-discharging-framerate = 500
