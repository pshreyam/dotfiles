[module/sep]
type = custom/text
content = " "

[module/round-left]
type = custom/text
content = %{T9}%{T-}
content-foreground = ${colors.content-background}

[module/round-right]
type = custom/text
content = %{T9}%{T-}
content-foreground = ${colors.content-background}

[module/date]
type = internal/date
interval = 1

date =
date-alt = " %b %d, %Y %A"

time = " %I:%M %p"
time-alt =

format-prefix = 🕖
format-background = ${colors.content-background}

label = %date%%time%

[module/backlight]
type = internal/backlight
card = intel_backlight

format = %{T5}<ramp>%{T-} <label>
format-padding = 1

label = %percentage%%

ramp-0 = 🌑
ramp-1 = 🌒
ramp-2 = 🌓
ramp-3 = 🌔
ramp-4 = 🌕

[module/notifications]
type = custom/script
exec = [[ "$(dunstctl is-paused)" == "true" ]] && echo "🔕 off" || echo "🔔 on"
interval = 1
format-padding = 1

click-left = dunstctl set-paused toggle

[module/xwindow]
type = internal/xwindow
label = %title:0:20:...%
format-padding = 2

[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.red}
format-padding = 1
label = %percentage_used:2%%

[module/volume]
type = internal/pulseaudio

format-volume = <label-volume> 
format-volume-padding = 1

label-volume = 🔊 %percentage%%
label-volume-foreground = ${colors.foreground}

label-muted = 🔇 muted
label-muted-foreground = ${colors.grey}
format-muted-padding = 1

;; restrict max volume to 100%
use-ui-max = false

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 100

format-charging-prefix = " "
