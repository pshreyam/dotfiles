# Manage dotfiles
function dotfiles() {
    git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME $@
}

# Change directory into the selected repository
function cr() {
    # Define folders to choose from
    folders_to_choose=$(echo "~/Work/repos\n~/Code/repos")

    # Select a folder using fzf
    folder=$(echo "$folders_to_choose" | fzf --border=rounded --height=50% --layout=reverse --header="Choose a folder to find repositories" --header-first --prompt="› " --pointer="➜")

    # If no folder is chosen, exit the function
    if [[ -z $folder ]]; then
        echo "No folder chosen."
        return 0
    fi

    echo "The chosen folder is $folder."

    folder=$(eval echo $folder)
    # List repositories and select one using fzf
    reply=$(ls -1 $folder | fzf --border=rounded --height=50% --layout=reverse --header="Choose a repository to cd into" --header-first --prompt="› " --pointer="➜")

    # If no repository is chosen, exit the function
    if [[ -z $reply ]]; then
        echo "No repository selected."
        return 0
    fi

    echo "Changed directory to $folder/$reply."

    # Change directory to the chosen repository
    cd "$folder/$reply"
}

# Message to a particular webhook
function message-webhook() {
    message="$@"
    curl -X POST -H 'Content-type: application/json' -d "{\"content\": \"$message\", \"embeds\": null, \"attachments\": []}" $WEBHOOK_URL
}
