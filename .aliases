# Python aliases
alias vc='python3 -m venv venv'
alias va='source ./venv/bin/activate'
alias vd='deactivate'
alias pipenv="/usr/bin/python -m pipenv"
alias up_pip="pip install --upgrade pip"
alias vca="vc && va && up_pip"

# Interactive command aliases
alias mv='mv -in'
alias cp='cp -in'
alias rm='rm -i'

# Manage dotfiles
alias dotfiles='/usr/bin/git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME'
alias dotgraph='dotfiles log --graph --full-history --all --color --pretty=format:"%x1b[31m%h%x09%x1b[32m%d%x1b[0m%x20%s"'

# Get coloured output
alias diff="diff --color=auto"

# restrict ping count to 4
alias ping="ping -c 4"

# power options
alias po='poweroff'
alias lo='bspc quit' 
